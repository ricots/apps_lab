<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_jadwal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/jadwal"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp" />
    <!---movie title-->

    <TextView
        android:id="@+id/kd_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ya allah"
        android:visibility="gone"
        android:layout_toRightOf="@+id/image_jadwal"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/hari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ya allah"
        android:layout_toRightOf="@+id/image_jadwal"
        android:textSize="17dp" />
    <!--rate-->
    <TextView
        android:id="@+id/jam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hari"
        android:layout_toRightOf="@+id/image_jadwal"
        android:text="tes"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/jam_sls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jam"
        android:visibility="gone"
        android:layout_toRightOf="@+id/image_jadwal"
        android:text="tes"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/jam_kgt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jam_sls"
        android:visibility="gone"
        android:layout_toRightOf="@+id/image_jadwal"
        android:text="tes"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/jam_prodi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jam_kgt"
        android:visibility="gone"
        android:layout_toRightOf="@+id/image_jadwal"
        android:text="tes"
        android:textSize="15dp" />

</RelativeLayout>